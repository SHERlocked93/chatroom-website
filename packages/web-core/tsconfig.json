{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build",
    "watch": true,
    "baseUrl": "./",
    "strictPropertyInitialization": false,
    "module": "ES2020"
  },
  "paths": {
    "~/*": ["./*"],
    "@/*": ["./*"]
  },
  "include": [
    "./src",
    "./typings",
  ],
  "exclude": ["node_modules"]
}
